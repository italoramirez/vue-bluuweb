<%- include('partials/header', { titulos: 'Página de cabecera' })%>


    <div class="container">
        <h1>CRUD Mongo</h1>
       <a
        class="btn btn-dark btn-block my-2" 
        href="/mascotas/crear"
       >
           Crear Nueva mascota
       </a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                <% if ( arrayMascotas.length > 0 ) { %>
                    <% arrayMascotas.forEach(mascota => { %>
                        <tr>
                            <td><%= mascota.id %></td>
                            <td><%= mascota.nombre %></td>
                            <td><%= mascota.descripcion %></td> 
                            <td>
                                <a 
                                    class="btn btn-primary btn-sm"
                                    href="mascotas/<%= mascota.id %> "
                                >
                                    Editar
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>    
        </table>
    </div>

<%- include('partials/footer')%>